\section{Computational methods}
\begin{frame}
\frametitle{Density functional theory (DFT)}
%\begin{columns}[c]
%\column{2in}
DFT-based modeling is extremely successful in many-body systems.

\begin{itemize}
 \item DFT was introduced by Hohenberg and Kohn in 1964. Kohn and Pople were awarded Chemistry Nobel Prize in 1998. 
 \item Around 20,000 papers per year.
\end{itemize}

DFT says that ground-state total energy ($E_{total}[\rho$]) can be determined from the ground-state charge density $\rho$ instead of many-electron wavefunction.
However, we do not have explicit form for $E_{total}[\rho$].

\end{frame}

\begin{frame}
 \frametitle{Kohn-Sham (KS) Equation}
 
Total Energy can be written as

\begin{equation}\label{kse}
E_{total}[\rho] \ =\ T_{0}[\rho] \quad \,  + \quad \,  V_{H}[\rho] \quad \, + \quad \, V_{ext}[\rho] \quad \, + \quad \, E_{xc}[\rho].
\end{equation}

The single-particle KS equation is derived as 

\begin{equation}\label{aaa111}
 \Big(-\frac{\nabla^{2}}{2}\ + \ V^{KS}(\textbf{r})\Big) \Psi^{{KS}}_{{i}}(\textbf{r}) = \epsilon^{{KS}}_{{i}} \Psi^{{KS}}_{{i}}(\textbf{r}).
\end{equation}



The $V^{KS}(\textbf{r})$ is give as

\begin{equation}\label{xiahunao}
\ V^{KS}(\textbf{r}) \ = \ V_{ext}(\textbf{r}) + \int \mathrm{d}{\textbf{r}'}  \frac{\rho(\textbf{r}')}{|{\textbf{r}}-{\textbf{r}}'|} \ + \  \overset{V_{xc}(\textbf{r})}{ \overbrace{\frac{\delta{E_{xc}}}{\delta{\rho(\textbf{r})}}}}.
\end{equation}

Here 
\begin{equation}
 \rho = \sum|\Psi^{{KS}}_{{i}}(\textbf{r})|^2.
\end{equation}

\end{frame}


